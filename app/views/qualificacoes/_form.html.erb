<%= form_for(@qualificacao) do |f| %>
  <% if @qualificacao.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@qualificacao.errors.count, "error") %> prohibited this qualificacao from being saved:</h2>

      <ul>
      <% @qualificacao.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  	<% if @qualificacao.cliente %>
		<%= f.hidden_field 'cliente_id' %>
		<b> Cliente </b> <br/>
			<%= @qualificacao.cliente.nome %>
		<br/>		
	<% else %>
		<%= f.label :cliente_id %> <br />
		<%= f.collection_select(:cliente_id,Cliente.order('nome'),:id,:nome,{:prompt => true}) %>
	<% end %> 	
  </div>
  <div class="field"> 	
  <% if @qualificacao.restaurante %>
  	<%= f.hidden_field 'restaurante_id' %>
	<b>Restaurante </b>
	<%= @qualificacao.restaurante.nome %>
 <% else %>
    <%= f.label :restaurante_id %><br />
    <%= f.collection_select(:restaurante_id,Restaurante.order('nome'), :id, :nome, {:prompt => true}) %>
 <% end %>	
  </div>
  <div class="field">
    <%= f.label :nota %><br />
    <%= f.text_field :nota %>
  </div>
  <div class="field">
    <%= f.label :valor_gasto %><br />
    <%= f.text_field :valor_gasto %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
