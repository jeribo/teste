<%= render :partial => "titulo" %>
<fieldset>
<h1>Adiciona Restaurante</h1>
<% if @restaurante.errors.any? %>
	<ul>
		<% @restaurante.errors.full_messages.each do |msg| %>
		    <li> <%= msg %></li>
		<% end %>
	</ul>
<% end %>
<%= form_for :restaurantes, :url => { :action => 'create' },:html => {:multipart => true} do |f| %>
	Nome: <%= f.text_field :nome %> <br/>
	Endere√ßo: <%= f.text_field :endereco %> <br/>
	Especialidade: <%= f.text_field :especialidade %> <br/>
	Foto: <%= f.file_field :foto %> <br />
	<%= submit_tag 'Criar' %>
<% end %>
<%= link_to 'Voltar', { :action => 'index'} %>
</fieldset>